            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewBhopal"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="5dp"
